<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_d3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dp20"
                android:text="EASY SHOPPING CART"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/firstname_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="@dimen/dp10"
                android:hint="First Name"
                android:padding="@dimen/dp10" />

            <EditText
                android:id="@+id/lastname_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="@dimen/dp10"
                android:hint="Last Name"
                android:padding="@dimen/dp10" />

            <EditText
                android:id="@+id/username_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="@dimen/dp10"
                android:hint="User Name"
                android:padding="@dimen/dp10" />

            <EditText
                android:id="@+id/pwd_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="@dimen/dp10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/dp10" />

            <EditText
                android:id="@+id/confirm_pwd_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="@dimen/dp10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="@dimen/dp10" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:padding="@dimen/dp5"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="Male"
                        android:maxLines="1"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/grey_15"
                        android:textAppearance="?android:textAppearanceMedium"
                    />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="Female"
                        android:maxLines="1"
                        android:textColor="@color/grey_15"
                        android:padding="@dimen/dp5"
                        android:textAppearance="?android:textAppearanceMedium"
                />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/dob_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp32"
                    android:layout_marginRight="@dimen/dp32"
                    android:drawableRight="@drawable/ic_date"
                    android:drawablePadding="@dimen/dp10"
                    android:text="               "
                    android:padding="@dimen/dp10" />
            </LinearLayout>

            <EditText
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/dp10"
                android:hint="Email"
                android:inputType="textPassword"
                android:padding="@dimen/dp10" />

            <EditText
                android:id="@+id/phone_etxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp32"
                android:layout_marginRight="@dimen/dp32"
                android:background="@drawable/ic_edit_txt_bg"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/dp10"
                android:hint="Phone Number"
                android:inputType="textPassword"
                android:padding="@dimen/dp10" />


            <TextView
                android:id="@+id/warning_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/dp10"
                android:text="Warning"
                android:textColor="@color/red"
                android:textSize="@dimen/sp12"
                android:textStyle="italic"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/finish_signup_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp32"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingTop="@dimen/dp10"
                android:text="Sign Up"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>