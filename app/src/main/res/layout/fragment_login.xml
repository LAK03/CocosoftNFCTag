<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_d3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp15"
            android:padding="@dimen/dp15"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp20"
            android:text="EASY SHOPPING CART"
            android:layout_marginTop="@dimen/dp15"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/username_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_marginRight="@dimen/dp28"
            android:background="@drawable/ic_edit_txt_bg"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/dp10"
            android:hint="User Name"
            android:padding="@dimen/dp10" />


        <EditText
            android:id="@+id/pwd_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_marginRight="@dimen/dp28"
            android:background="@drawable/ic_edit_txt_bg"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/dp10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/dp10" />

        <TextView
            android:id="@+id/warning_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dp10"
            android:text="Warning"
            android:textColor="@color/red"
            android:textSize="@dimen/sp12"
            android:textStyle="italic"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/settings_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp28"
            android:src="@drawable/ic_setting" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_corner"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp10"
            android:text="Log In"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/signup_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp20"
            android:text="Not a user? SignUp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>